# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# The home page of the application is the "sign in" one.
GET     /			controllers.HomeController.index

GET     /signup			controllers.HomeController.signupForm

POST	/signup			controllers.HomeController.signup

GET     /signin			controllers.HomeController.signinForm

POST    /signin                 controllers.HomeController.signin

GET	/signout		controllers.HomeController.signout

#show detail of cours2
GET    /cour2.html     controllers.HomeController.cour2

# Show the home page of the user with the given id.
GET     /users/:id              controllers.Users.read(id: Long)

GET	/users/:id/tasks	controllers.Users.tasks(id: Long)

GET	/users/:id/ownedtasks	controllers.Users.ownedTasks(id: Long)

# Display all the existing tasks.
GET	/tasks			controllers.Tasks.readAll

# Display a page for creating a new task.
GET	/tasks/form		controllers.Tasks.form

# Submit a task.
POST	/tasks			controllers.Tasks.create

# Display a task.
GET	/tasks/:id		controllers.Tasks.read(id: Long)

# Delete a task.
DELETE	/tasks/:id		controllers.Tasks.delete(id: Long)

# Register a user for a task.
POST	/tasks/:taskId/users/:userId	controllers.Tasks.register(taskId: Long, userId: Long)

# Unregister a user from a task.
DELETE	/tasks/:taskId/users/:userId	controllers.Tasks.unregister(taskId: Long, userId: Long)

# # Get all the deliverables for a given task.
# GET	/tasks/:id/deliverables	controllers.Tasks.getAllDeliverables(id: Long)

# # Submit a deliverable.
# POST	/tasks/:id/deliver	controllers.Tasks.deliver(id: Long)

# Map static resources from the /public folder to the /assets URL path.
GET     /assets/*file           controllers.Assets.versioned(path = "/public", file: Asset)
