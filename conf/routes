# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# The home page of the application is the "sign in" one if the user is
# not signed in, otherwise it is the user's home page.
GET     /			controllers.HomeController.index

GET     /signup			controllers.HomeController.signupPage

POST	/signup			controllers.HomeController.signup

GET     /signin			controllers.HomeController.signinPage

POST    /signin                 controllers.HomeController.signin

#show detail of cours2
GET    /cour2.html     controllers.HomeController.cour2

# Show the home page of the signed-in user.
GET     /user/home              controllers.UserController.home

GET	/user/tasks		controllers.UserController.tasks

GET	/user/ownedtasks	controllers.UserController.ownedTasks

GET	/user/signout           controllers.UserController.signout

# Display a page for creating a new task.
GET	/tasks/create		controllers.TaskController.createPage

# Submit a task.
POST	/tasks			controllers.TaskController.create

# Display a task, more precisely display a page for creating a new
# deliverable for the given task.
GET	/tasks/:id		controllers.TaskController.read(id: Long)

# Display all the existing tasks.
GET	/tasks			controllers.TaskController.readAll

# Get all the deliverables for a given task.
GET	/tasks/:id/deliverables	controllers.TaskController.readAllDeliverables(id: Long)

# Register a user for a task.
POST	/tasks/:id/register	controllers.TaskController.register(id: Long)

# Unregister a user from a task.
DELETE	/tasks/:id/unregister	controllers.TaskController.unregister(id: Long)

# Submit a deliverable.
POST	/tasks/:id/deliver	controllers.TaskController.deliver(id: Long)

# Delete a task.
DELETE	/tasks/:id		controllers.TaskController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path.
GET     /assets/*file           controllers.Assets.versioned(path = "/public", file: Asset)
