# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# The home page of the application is the "sign in" one.
GET     /			controllers.HomeController.index

GET     /signup.html		controllers.HomeController.signup

GET     /home.html		controllers.HomeController.home

GET    /cour1.html     controllers.HomeController.cour1

POST    /signin                 controllers.HomeController.signin

# Show the home page of the user with the given id.
GET     /users/:id		controllers.Users.index(id: Long)

# Create a user.
POST	/users			controllers.Users.create

# Register a user for a task.
POST	/users/:userId/register/:taskId		controllers.Users.register(userId: Long, taskId: Long)

# Unregister a user from a task.
DELETE	/users/:userId/unregister/:taskId	controllers.Users.unregister(userId: Long, taskId: Long)

# Delete a user.
DELETE	/users/:id		controllers.Users.delete(id: Long)

# Display all the existing submissions.
GET	/submissions		controllers.Submissions.readAll

# Create a submission.
POST	/submissions		controllers.Submissions.create

# Map static resources from the /public folder to the /assets URL path.
GET     /assets/*file           controllers.Assets.versioned(path = "/public", file: Asset)
